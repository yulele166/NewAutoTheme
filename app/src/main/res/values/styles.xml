<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SearchView" />

    <style name="SearchView.TextView" />

    <style name="SearchView.TextView.NoContent">
        <item name="android:textColor">@color/search_center_color</item>
        <item name="android:textSize">@dimen/text_size_16px</item>
        <item name="android:padding">@dimen/view_default_margin_large</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="EditModeMenu" />

    <style name="EditModeMenu.Text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#d1c1b1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">@dimen/view_default_margin</item>
    </style>

    <!-- 弹窗组件样式 -->
    <style name="MCustomDialogButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#1a88fb</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@null</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="MCustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/bg_dialog_panel</item>
        <item name="android:textColorPrimary">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MWidget.TextView.WidgetWeather_Time" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">68sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MWidget.TextView.WidgetWeather_Time_dot" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>